<div class="examples">
  <form class="form">

    <div class="form-title">Sign In</div>

    <div class="form-input">
      <label for="user-username">Username</label>
      <input type="text" id="user-username" name="user[username]" placeholder="Username">
    </div>

    <div class="form-input">
      <label for="user-email">Email</label>
      <input type="email" id="user-email" name="user[email]" placeholder="Email">
    </div>

    <div class="form-input">
      <label for="user-password">Password</label>
      <input type="password" id="user-password" name="user[password]" placeholder="Password">
    </div>

    <div class="form-submit">
      <input class="btn btn-blue" type="submit"value="Submit">
    </div>

  </form>
</div>

